<h1>New game</h1>

<div class="form">
  <ul class="letters">
  <% @letters.each do | letter | %>
    <li> <%= letter  %></li>
  <% end %>
  </ul>
</div>

<div>
  <form action="/score" method="post">
    <input type="text" name="score" placeholder="What is the longest word you can find" id="form" <%= hidden_field_tag :authenticity_token, form_authenticity_token %>>
    <input type="submit">
  </form>
</div>
